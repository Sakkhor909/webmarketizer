<LinkTo
  class={{concat
    'service-container hover-effect services-animi-up-'
    @service.animation
  }}
  @route='services.service'
  @model={{@service.link}}
  {{remove-class}}
>
  <Service::Image
    class='services-img'
    src={{@service.image}}
    alt={{@service.ServiceName}}
  />
  <h2>{{@service.ServiceName}}</h2>
  <p>{{@service.content}}</p>
</LinkTo>